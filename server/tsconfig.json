{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "strict": false, // Enable strict mode for better type safety
    "module": "ESNext", // Use ES Modules
    "target": "ES2020", // Ensure compatibility with top-level await
    "esModuleInterop": true, // Allow compatibility with CommonJS modules
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true // Enable ESM support for ts-node
  }
}
